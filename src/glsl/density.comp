#version 430 core

layout (local_size_x = 1, local_size_y = 1, local_size_z = 1) in;

writeonly buffer density_block
{
    vec4 density[];
};

void main() {
    const float id = dot(
        gl_GlobalInvocationID,
        vec3(1, gl_NumWorkGroups.x, gl_NumWorkGroups.y * gl_NumWorkGroups.x)
    );
    density[uint(id)] = vec4(id);
}
